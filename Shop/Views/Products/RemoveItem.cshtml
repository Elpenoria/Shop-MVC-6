@model Shop.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="row">
    <div class="col-5 mx-auto">
        <img src="@("~/img/"+Model.MainImage)" asp-append-version="true" width="300px" height="auto" />
    </div>
    <div class="col-6 mx-auto">
        <h2>@Model.ProductName</h2>
        <p>@Model.Description</p>
        <p>@Model.DiscountedPrice</p>
        <div class="d-flex">
            <a class="btn btn-danger" asp-action="Remove" asp-route-id="@Model.ProductId">Sure To Remove?</a>
            <a asp-action="YourCart" class="btn btn-info">Return to Cart</a>
        </div>
    </div>
</div>

