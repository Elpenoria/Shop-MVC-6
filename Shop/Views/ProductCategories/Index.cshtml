@model IEnumerable<Shop.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

@if (User.IsInRole("Seller"))
{
    <p>
        <a asp-action="Create" class="btn btn-outline-primary">Create New</a>

    </p>
}

<div class="row mb-4">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 d-flex justify-content-center align-items-center p-2 " style="position:relative ;">

            <a asp-action="Filter" asp-controller="Products" asp-route-value="blank" asp-route-category="@item.Name">
                <img src="@("~/img/"+@item.ImageName)" asp-append-version="true" style="width:100%; height:100%" />
            </a>
            <h1 class="position-absolute top-50 start-50 translate-middle fw-bold text-white text-center">@item.Name</h1>

            
        </div>
        @if (User.IsInRole("Seller"))
            {
                <p class="d-flex">
                    <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@item.ProductCategoryId">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ProductCategoryId">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.ProductCategoryId">Delete</a>
                </p>
            }
    }
</div>
